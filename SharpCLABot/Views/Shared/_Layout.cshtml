<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    <style type="text/css">
        .CodeMirror {
          border: 1px solid #aaa;
          height: auto;
        }
        .CodeMirror-scroll {
          overflow-y: hidden;
          overflow-x: auto;
        }
    </style>
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/codemirror/lib")
    @Scripts.Render("~/bundles/codemirror/mode")
</head>
    <body>
        <div class="container">
            <div class="navbar navbar-default">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @Html.ActionLink(AdminConfig.Instance.ProjectName, "Index", "Home", null, new { @class = "navbar-brand" })
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("Sign", "Sign", "Home")</li>
                            <li>@Html.ActionLink("Admin", "Index", "Admin")</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="body-content">
                @RenderBody()
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - Powered by <a href="https://github.com/SharpCLABot/SharpCLABot">SharpCLABot</a></p>
                </footer>
            </div>
        </div>
        @RenderSection("scripts", required: false)
</body>
</html>
